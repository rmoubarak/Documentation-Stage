{% use 'bootstrap_5_layout.html.twig' %}

{%- block form_errors -%}
    {%- if errors|length > 0 -%}
        {%- for error in errors -%}
            <div class="invalid-feedback d-block"><i class="fas fa-exclamation-triangle text-danger"></i> <strong>{{ error.message }}</strong></div>
        {%- endfor -%}
    {%- endif %}
{%- endblock form_errors %}
