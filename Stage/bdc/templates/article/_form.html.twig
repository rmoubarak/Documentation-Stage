{% if not form.vars.valid %}
    <div class="alert alert-danger">
        <i class="fa-solid fa-lg fa-exclamation-triangle"></i>
        Votre saisie comporte des erreurs. Veuillez corriger.
        {{ form_errors(form) }}
    </div>
{% endif %}

<form name="frm_article" method="post" action="{{ path }}" data-async="true"
      data-callback="{{ path('article_list', {'page': 1}) }}" data-list="article_list">

    <div class="row">
        <div class="col-md-12">{{ form_row(form.titre) }}</div>
    </div>

    <div class="row">
        <div class="col-md-12">{{ form_row(form.detail)  }}</div>
    </div>

    <div class="row">
        <div class="col-md-6">{{ form_row(form.categories) }}</div>
        <div class="col-md-6">{{ form_row(form.url) }}</div>
    </div>

    {{ form_rest(form) }}

    <hr />
    {{ include('default/_modal_form_footer.html.twig') }}
</form>


